<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <Space
        android:id="@+id/left_space"
        android:layout_width="10dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="50dp"/>

    <Space
        android:id="@+id/right_space"
        android:layout_width="10dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_marginRight="50dp"/>

    <Space
        android:id="@+id/middle_space"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:layout_margin="10dp"
        android:layout_toLeftOf="@id/right_space"
        android:layout_toRightOf="@id/left_space"/>

    <FrameLayout
        android:id="@+id/child_middle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:layout_margin="10dp"
        android:layout_toLeftOf="@id/right_space"
        android:layout_toRightOf="@id/left_space"
        android:background="@android:color/holo_blue_dark"/>

    <FrameLayout
        android:id="@+id/child_left"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="50dp"
        android:layout_marginTop="50dp"
        android:layout_toLeftOf="@+id/middle_space"
        android:background="@android:color/holo_green_dark"/>

    <FrameLayout
        android:id="@+id/child_right"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:layout_marginBottom="50dp"
        android:layout_marginTop="50dp"
        android:layout_toRightOf="@id/middle_space"
        android:background="@android:color/holo_red_dark"/>
</RelativeLayout>